#include<stdio.h>

void swap_array(int arr[], int n);

int main(void)
{
    int n;

    printf("Enter the value of n:");
    scanf("%d", &n);

    int arr[n];


    for(int i=0; i<n; i++)
    {
        printf("Enter values of array:");
        scanf("%d", &arr[i]);
    }

    int s_array[n];

    printf("Before Swap:\n");
    for(int i=0;i<n; i++)
    {
        printf("%d", arr[i]);
    }

    swap_array(arr, n);

    printf("\nAfter Swap:\n");
    for(int i=0;i<n; i++)
    {
        printf("%d", arr[i]);
    }
}

void swap_array(int arr[], int n)
{
    for(int i=0; i<n/2; i++)
    {
         int temp= arr[n-(i+1)];
         arr[n-(i+1)] = arr[i];
         arr[i]= temp;
    }
}
