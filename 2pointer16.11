#include<stdio.h>

void swap(int *ptr1, int *ptr2);
int main(void)
{
    int a = 10, b = 4;
    int *ptr1 = &a;
    int *ptr2 = &b;


    printf("Before swap:\n");
    printf("a: %d, b: %d\n", *ptr1, *ptr2);

    //swap(ptr1, ptr2)
    swap(ptr1, ptr2);

    printf("After swap:\n");
    printf("a: %d, b: %d\n", *ptr1, *ptr2);

    return 0;
}

void swap(int *ptr1, int *ptr2)
{
    int temp = *ptr1;
    *ptr1 = *ptr2;
    *ptr2 = temp;
}
